{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "src/types/custom.d.ts", "generators/templates/repositories/useRepository.ts.bs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
